<head>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>






<body>
<h2>Creation des utilisateur</h2>
<h3>metode 1</h3>
<form action="create" method="POST">
 <div class="row">
    <div class="col">
      <input type="string" class="form-control" placeholder="username" name="username">
    </div>
    <div class="col">
      <input type="string" class="form-control" placeholder="email" name="email">
    </div>
  </div>




  <div class="form-group">
    <label for="formGroupExampleInput2"></label>
    <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="bio" name="bio">
  </div>
  <button type="submit" class="btn btn-primary mb-2">Cree le compte</button>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
</form>


<h3>metode 2</h3>


<%= form_tag do %>
  <%= text_field_tag(:username, nil, class: 'form-control', placeholder: 'username' ) %><br/> 	  
  <%= text_field_tag(:email, nil, class: 'form-control', placeholder: 'email' ) %><br/>
  <%= text_field_tag(:bio, nil, class: 'form-control', placeholder: 'bio' ) %><br/>
  <%= submit_tag("Cree le compte", class: "btn btn-primary mb-2") %><br/>
<% end %>


<h3>metode 3</h3>
<h4>decomanter pour utiliser le formulair 3</h4>

<%= form_for @user, url: {action: "create"} do |f| %>
  <%= f.text_field :username, class: 'form-control', placeholder: 'username' %><br/>
  <%= f.text_field :email, class: 'form-control', placeholder: 'email' %><br/>
  <%= f.text_area :bio, class: 'form-control', placeholder: 'bio', size: "42x4.2" %><br/>
  <%= f.submit "Cree le compte", class: "btn btn-primary mb-2"%><br/>
<% end %>



<div>
	<% @user_id = 1 %>
	<% @all_users.each do |user| %>
	<p> <%= @user_id %> <%= user[:username] %> <%= user[:email] %> <%= user[:bio] %></p>
	<% @user_id += 1 %>
	<% end %>

</div>






</body>